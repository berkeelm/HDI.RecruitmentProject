@model Application.Features.Product.Command.Add.ProductAddCommand

@{
    ViewData["Title"] = "Ürün Ekle";
}

<form method="POST" action="@Url.Action("Add", "Product")" enctype="multipart/form-data">
     <div class="row">
          <div class="col-md-6 form-group">
               <label>Ürün Adı</label>
            @Html.TextBoxFor(x=>x.Name, new {@class="form-control", required=true})
          </div>
          <div class="col-md-6 form-group">
               <label>Açıklama</label>
            @Html.TextBoxFor(x=>x.Description, new {@class="form-control", required=true})
          </div>
     </div>
     <div class="mt-3 row">
          <div class="col-md-6 form-group">
               <label>Fiyat</label>
            @Html.TextBoxFor(x=>x.Price, new {@class="form-control", required=true,type="number"})
          </div>
          <div class="col-md-6 form-group">
               <label>Fotoğraf</label>
               <input type="file" name="formFile" class="form-control form-control-file" id="exampleFormControlFile1">
          </div>
     </div>

     <div class="mt-3 row">
          <div class="col-md-12">
               <button type="submit" class="btn btn-primary">Kaydet</button>
          </div>
     </div>
</form>