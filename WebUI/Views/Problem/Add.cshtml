@model List<Application.Features.WarrantyType.Query.GetAll.WarrantyTypeGetAllDto>

@{
    ViewData["Title"] = "Arıza Ekle";
}

<form method="POST" action="@Url.Action("Add", "Problem")" enctype="multipart/form-data">
     <div class="row">
          <div class="col-md-6 form-group">
               <label>Arıza Adı</label>
               <input class="form-control" name="Name" type="text" required />
          </div>
          <div class="col-md-6 form-group">
               <label>Garanti Tipi</label>

               <select name="WarrantyTypeId" class="form-control" required>
                    <option value="">Seçiniz</option>

                @{
                    foreach (var item in Model)
                    {
                            <option value="@item.Id">@item.Name</option>
                    }
                }
               </select>
          </div>
     </div>

     <div class="mt-3 row">
          <div class="col-md-12">
               <button type="submit" class="btn btn-primary">Kaydet</button>
          </div>
     </div>
</form>