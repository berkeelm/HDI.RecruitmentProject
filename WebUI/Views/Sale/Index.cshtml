@model List< Application.Features.Sale.Query.GetAll.SaleGetAllDto>

@{
    ViewData["Title"] = "Satış Listesi";
}

<table class="dTable table table-striped">
     <thead>
          <tr>
               <th>Resim</th>
               <th>Ürün</th>
               <th>Müşteri</th>
               <th>Değişim & Tamir Merkezi</th>
               <th>Fiyat</th>
               <th>Oluşturulma Tarihi</th>
               <th>Oluşturan Kullanıcı</th>
               <th>Güncellenme Tarihi</th>
               <th>Güncelleyen Kullanıcı</th>
               <th></th>
               <th></th>
               <th></th>
          </tr>
     </thead>
     <tbody>
        @{
            foreach (var item in Model.OrderByDescending(x => x.Id))
            {
                  <tr>
                       <td><img class="img img-thumbnail" style="max-width: 100px" src="~/uploads/@item.PhotoPath" /></td>
                       <td>@item.Product</td>
                       <td>@item.Customer</td>
                       <td>@item.RepairChangeCenterUser</td>
                       <td>@item.Price</td>
                       <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                       <td>@item.CreatedUser</td>
                       <td>@(item.UpdatedDate.HasValue ? item.UpdatedDate.GetValueOrDefault().ToString("dd.MM.yyyy HH:mm") : "")</td>
                       <td>@item.UpdatedUser</td>
                       <td class="align-middle"><a class="h5" href="@Url.Action("Edit", "Sale", new { id=item.Id})"><i class="fa fa-edit" /></a></td>
                       <td class="align-middle"><a class="h5" href="@Url.Action("Delete", "Sale", new { id=item.Id})"><i class="fa fa-trash" /></a></td>
                       <td class="align-middle"><a title="Garanti Tanımla" class="h5" href="@Url.Action("Add", "SaleWarranty", new { id=item.Id})"><i class="fa fa-certificate" /></a></td>
                  </tr>
            }
        }
     </tbody>
</table>