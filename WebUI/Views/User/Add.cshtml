@model Application.Features.User.Command.Add.UserAddCommand

@{
    ViewData["Title"] = "Kullanıcı Ekle";
}

<form method="POST" action="@Url.Action("Add", "User")">
     <div class="row">
          <div class="col-md-6 form-group">
               <label>Ad Soyad</label>
            @Html.TextBoxFor(x=>x.NameSurname, new {@class="form-control", required=true})
          </div>
          <div class="col-md-6 form-group">
               <label>Email</label>
            @Html.TextBoxFor(x=>x.Email, new {@class="form-control", required=true,type="email"})
          </div>
     </div>
     <div class="mt-3 row">
          <div class="col-md-6 form-group">
               <label>Kullanıcı Adı</label>
            @Html.TextBoxFor(x=>x.Username, new {@class="form-control", required=true})
          </div>
          <div class="col-md-6 form-group">
               <label>Şifre</label>
            @Html.PasswordFor(x=>x.Password, new {@class="form-control", required=true})
          </div>
     </div>
     <div class="mt-3 row">
          <div class="col-md-6 form-group">
               <label>Kullanıcı Tipi</label>

               <select name="UserType" class="form-control" required>
                    <option value="">Seçiniz</option>
                    <option selected="@(Model.UserType == Domain.Enums.UserType.FirmUser)" value="@((int)Domain.Enums.UserType.FirmUser)">@Domain.Enums.UserType.FirmUser.ToString()</option>
                    <option selected="@(Model.UserType == Domain.Enums.UserType.DealerUser)" value="@((int)Domain.Enums.UserType.DealerUser)">@Domain.Enums.UserType.DealerUser.ToString()</option>
                    <option selected="@(Model.UserType == Domain.Enums.UserType.RepairChangeCenterUser)" value="@((int)Domain.Enums.UserType.RepairChangeCenterUser)">@Domain.Enums.UserType.RepairChangeCenterUser.ToString()</option>
               </select>
          </div>
     </div>

     <div class="mt-3 row">
          <div class="col-md-12">
               <button type="submit" class="btn btn-primary">Kaydet</button>
          </div>
     </div>
</form>